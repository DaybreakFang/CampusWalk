}
.bg-2{
  background-color: #ff7900;
}
.bg-3{
  background-color: #19be6b;
}
.swiper-active {
  transform: scale(1);
}
.card{
  display: flex;
  flex-direction: column;
}
.card-main {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  height: 300rpx;
}

.desc-show {
  display: block;
  padding: 0 60rpx;
}

.desc-show  text {
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  text-align: justify;
}

.go {
  position: absolute;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
}

.go button {
  margin: 20rpx;
  width: 520rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 40rpx;
  background-color: #fff;
  color: #313c4d;
}

.blank {
  display: none;
}

.change-img {

  width: 200rpx !important;
  height: 200rpx !important;
  border-radius: 50%;
  background: #fff;
  border: #fff 6rpx solid;
}
.locationTitle {
  display: block;
  width: 100%;
  width: 270rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.views {
  display: inline-block;
  text-align: center;
  color: #fff;
  /* font-size: 28rpx; */
  line-height: 200rpx;
  vertical-align: middle;
  margin-left: 30rpx;
}

.views span {
