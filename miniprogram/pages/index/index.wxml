<view class="container">
  <tui-navigation-bar splitLine bindinit="initNavigation" dropDownHide bindchange="opcityChange" scrollRatio="0.7"
    scrollTop="{{scrollTop}}" title="校园逛逛" backgroundColor="#f6f6f6" color="#333">
  </tui-navigation-bar>
  <view class="intro-img">
    <image src="../../images/header.png"></image>
  </view>
  <view class="main-content">
    <view class="intro-wrap">
      <view class="intro-layout">
        <view class="banner">
          <swiper-activity list="{{swiperArr}}" />
        </view>

        <view class="card">
          <view style="flex:1" hover-class="press" bindtap="scanQRCode">
            <card type="warning" title="扫一扫" icon="sweep" color="#28b78c" size="26" desc="即刻了解地标详情" />
          </view>
          <view style="flex:1;margin-top:3%" hover-class="press"  bindtap="authLocation">
            <card type="primary" title="逛一逛" icon="position" color="#feab3a" size="29" desc="发现身边最新动态" />
          </view>
        </view>
      </view>
    </view>
    <tui-divider size="30">
    <!-- <tui-icon name="satisfied" size="20"></tui-icon> -->
    <text class="tui-text">校园热门(每10分钟更新一次)</text>
  </tui-divider>
    <blog list="{{blogList}}" binddetail="Todetail" />
    <!--加载loadding-->
    <tui-loadmore wx:if="{{loadding}}" index="3" type="primary"></tui-loadmore>
    <tui-nomore wx:if="{{!pullUpOn}}"></tui-nomore>
    <!--加载loadding-->

    <view class="tui-operation animated bounceInUp" hidden="{{isLogin}}">
      <view class="operation-wrap">
        <view class="tui-operation-left tui-col-7">
          <view class="content-head">
            <image src="/images/logo.png" class="tui-avatar"></image>
            <view class="tui-title">
              <text class="nickname ">欢迎来到“校园逛逛”</text>
              <text class="nickname">开启精彩大学生活</text>
            </view>
          </view>
        </view>
        <view class="tui-operation-right tui-right-flex tui-col-5">
          <view class="tui-operation-item" hover-class="tui-opcity" hover-stay-time="150" bindtap="btnLogin">
            <text class="login" bindtap="toLogin">登 录</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>