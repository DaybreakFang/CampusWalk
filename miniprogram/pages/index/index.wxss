/* miniprogram/pages/index/index.wxss */
.container {
  position: relative;
  padding-bottom: env(safe-area-inset-bottom);
  width: 100%;
  height: 100vh;
}

.intro-img image {
  width: 100%;
  height: 334rpx;
}

.main-content {
  box-sizing: border-box;
  position: absolute;
  background: #fafafa;
  z-index: 3;
}

.intro-wrap {
  padding: 0 25rpx;
  margin-bottom: 10rpx;
  margin-top: 16rpx;
}

.intro-layout {

  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: row;
}

.banner {
  flex: 1;
  margin-right: 2%;
}

.card {
  height: 460rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: column;
}

.tui-text {
  padding-left: 10rpx;
  vertical-align: middle;
  font-size: 26rpx;
}

.tui-operation {
  width: 100%;
  height: 140rpx;
  position: fixed;
  left: 0;
  bottom: 20rpx;
  z-index: 99;
  box-sizing: border-box;
  padding-bottom: env(safe-area-inset-bottom);
}

.operation-wrap {
  margin: 0 25rpx;
  display: flex;
  background: rgba(3, 3, 3, .9);
  justify-content: space-between;
  box-sizing: border-box;
  padding: 18rpx 25rpx;
  border-radius: 14rpx;
}

.tui-safearea-bottom {
  width: 100%;
  height: env(safe-area-inset-bottom);
}



.tui-operation-left {
  display: flex;
  align-items: center;
}

.tui-operation-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  position: relative;
}

.tui-operation-right {
  height: 100rpx;
  box-sizing: border-box;
  padding-top: 0;
}

.tui-right-flex {
  display: flex;
  align-items: center;
  justify-content: center;
}

.content-head {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.tui-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: block;
  flex-shrink: 0;
}

.tui-title {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-left: 20rpx;
}

.tui-title .nickname {
  font-size: 30rpx;
  color: #fff;
}



.login {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  padding: 0 30rpx;
  border-radius: 14rpx;
  background: #00c9ff;
  color: #333;
}