.container{
position: relative;
padding-bottom: env(safe-area-inset-bottom);
width: 100%;
height: 100vh

}

.intro-img{
box-sizing: border-box;
height: 26%;
  background-color: #f6f6f6;
  /* background: linear-gradient(to right, #4facfe 0%, #00f2fe 100%); */
}
.intro-img image{
  width: 100%;
  height: 100%;
  border-bottom-left-radius: 56rpx 46rpx;

}
.intro-img::after{
  content: "";
  position: absolute;
  top: 26%;
  right: 0;
  height: 100rpx;
  width: 100%;
  background: linear-gradient(to right, #4facfe 0%, #00f2fe 100%);
  z-index: 2;
}
.main-content{
  box-sizing: border-box;
  position: absolute;
  top: 26%;
  /* height: 100%; */
  background: #f6f6f6;
  z-index: 3;
  /* background: linear-gradient(to right, #4facfe 0%, #00f2fe 100%); */
  border-top-right-radius: 56rpx 46rpx;
}
.intro-wrap{
  padding: 0 25rpx;

  margin-top: 30rpx;
 
}
.intro-layout{

  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: row;
}
.banner{
  flex:1;
  margin-right: 2%;
}
.card{
  height: 460rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: column;
}