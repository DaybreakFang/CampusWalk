.box-layout{
  position: relative;
  height: 120rpx;
  width: 100%;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
}
.avatar{
  position: absolute;
  top: 58%;
  left: 8%;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: 4rpx solid #fafafa;
  display: flex;
  justify-content: center;
  align-items: center;
}
.box-layout text{
  display: inline-block;
  margin-left: 40%;
  margin-top: 20%;
  font-weight: bold;
  font-size: 36rpx;
  color: #fafafa;
}
.walk{
  color: #999;
  font-size: 22rpx;
  margin-left: 40%;
  margin-top: 2%;
}
.box-desc{
  width: 150rpx;
}
.box-desc p{
display: block;
font-weight: bold;
font-size: 36rpx;
color: #313c4d;
}
.box-desc text{
  font-size: 18rpx;
  color: #5a5a5a;
}
