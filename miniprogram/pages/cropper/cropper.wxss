/* pages/cropper/cropper.wxss */
.container{
  position: relative;
padding-bottom: env(safe-area-inset-bottom);
  width: 100%;
  height: 100vh;
}
.tui-header-icon {
	width: 100%;
	position: fixed;
	top: 0;
	padding: 0 12rpx;
	display: flex;
	align-items: center;
	height: 32px;
	transform: translateZ(0);
	z-index: 99999;
	box-sizing: border-box;
}
.operate-bar{
  width: 100%;
  padding: 0 20rpx 20rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 9999;
}
.item-box{
  width: 100%;
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  justify-content: center;
  white-space: nowrap;
  padding-bottom: 120rpx;
}
.item-box text{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  padding: 0 20rpx;
  border-radius: 40rpx;
  background: #00c9ff;
  color: #fff;
}