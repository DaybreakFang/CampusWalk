/* pages/attraction/attraction.wxss */
.container{
  position: relative;
padding-bottom: env(safe-area-inset-bottom);
  width: 100%;
}
.tui-header-icon {
	width: 100%;
	position: fixed;
	top: 0;
	padding: 0 12rpx;
	display: flex;
	align-items: center;
	height: 32px;
	transform: translateZ(0);
	z-index: 99999;
	box-sizing: border-box;
}
.box{
  width: 100%;
  height: 400rpx;
  position: relative;
}
.box::after{
  position: absolute;
  content: "";
  width: 100%;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  background-color: #000;
  opacity: .5;
  border-bottom-left-radius:  50% 10%;
  border-bottom-right-radius:  50% 10%;
}
.box image{
  width: 100%;
  height: 400rpx;
  border-bottom-left-radius:  50% 10%;
  border-bottom-right-radius:  50% 10%;
  /* filter: blur(2rpx); */
}
.back{
  position: absolute;
  left: 16px;
  bottom: 22px;
  transform: translateY(50%);
  height: 32px;
  z-index: 9;
}
.back image{
  width: 40rpx;
  height: 40rpx;
}
.title{
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -25%;
  z-index: 1;
}
.title text{
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
}
.title p{
  margin-top: 20rpx;
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #e7e7e7;
}
.add{
  position: absolute;
  bottom: -8%;
  left: 50%;
  z-index: 1;
  margin-left: -100rpx;
  box-sizing: border-box;
}
.add-btn{
  width: 200rpx;
  height: 73rpx;
  line-height: 70rpx;
  border-radius: 40rpx;
  background: #00c9ff;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
.add-btn text{
  margin-left: 10rpx;
  vertical-align: middle;
}
.switch{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
  padding: 0 30rpx;
  margin-top: 20rpx;
}
.switch-right text{
  color: #444;
  margin-top: 10rpx;
}
.switch-right>text{
  margin-right: 20rpx;
}