/* pages/add/add.wxss */
.container{
  position: relative;
padding-bottom: env(safe-area-inset-bottom);
  width: 100%;
  height: 100vh;
  background-color: #fff;
  overflow: hidden;
}

.open{
  display: flex;
  /* justify-content: space-between; */
  padding: 20rpx;
  flex-direction: row;
  background-color: #fff;
}
.open text{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  padding: 0 30rpx;
  border-radius: 40rpx;
  text-align: center;
}
.title{
  flex: 17;
  font-size: 40rpx;
  color: #333;
}
.open .issue{
  flex: 2;
  background: #00c9ff;
  color: #fff;
}



.header{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
}
.header text{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  padding: 0 30rpx;
  border-radius: 40rpx;

}
.cancel{
  color: #999;
  background: #f6f6f6;
}
.issue{
  background: #00c9ff;
  color: #fff;
}
.thorui-upload__box{
  padding: 20rpx;
}
.content-middle{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.location{
  background-color: #f8f8f8;
  color: #999;
  padding:  6rpx 20rpx;
  font-size: 26rpx;
  display: inline-block;
  border-radius: 40rpx;
  vertical-align: middle;
  margin-left: 30rpx;
  margin-top: 30rpx;
}
.location text{
  margin-left: 10rpx;
}
.words{
  font-size: 26rpx;
  color: #999;
  padding: 6rpx 20rpx;
  display: inline-block;
  vertical-align: middle;
  margin-left: 30rpx;
  margin-top: 30rpx;
}
.thorui-input-item {
  width: 100%;
  display: flex;
  font-size: 32rpx;
}
.thorui-textarea {
  min-height: 500rpx;
  flex-direction: column;
  align-items: flex-end;
}
.thorui-textarea textarea {
  width: 100%;
  padding: 0;
  height: 200rpx;
}
.thorui-input {
  flex: 1;
  font-size: 32rpx;
  padding-right: 12rpx;
  box-sizing: border-box;
  /* overflow: visible; */
}
.thorui-phcolor {
	color: #ccc;
	font-size: 32rpx;
	/* overflow: visible; */
}
.text-input{
  position: absolute;
  top: 100rpx;
  left: 0;
  right: 0;
  width: 100%;
  z-index: 99;
}