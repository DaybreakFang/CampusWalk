.mask {
  position: absolute;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}

.loading {
  display: flex;
  flex-direction: column;
  position: absolute;
  align-items: center;
  width: 100%;
  top: 45%;
}

.loading-icon {
  width: 100rpx;
  height: 100rpx;
}

.loading-text {
  margin-top: 28rpx;
  font-size: 28rpx;
  color: #333333;
}
